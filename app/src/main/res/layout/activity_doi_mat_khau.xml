<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".LoginActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi Mật Khẩu"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="#3B96F8"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edt_dmk_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColorHint="#3B96F8"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:background="@drawable/custom_editext"/>

    <EditText
        android:id="@+id/edt_dmk_oldpass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mật khẩu cũ"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColorHint="#3B96F8"
        android:padding="5dp"
        android:drawableStart="@drawable/password"
        android:background="@drawable/custom_editext"/>

    <EditText
        android:id="@+id/edt_dmk_newpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Mật khẩu mới"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColorHint="#3B96F8"
        android:padding="5dp"
        android:drawableStart="@drawable/password"
        android:background="@drawable/custom_editext"/>

    <EditText
        android:id="@+id/edt_dmk_Repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nhập Lại Mật Khẩu Mới"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColorHint="#3B96F8"
        android:padding="5dp"
        android:drawableStart="@drawable/repass"
        android:background="@drawable/custom_editext"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dmk_doi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng Ý"
            android:background="@drawable/custom_button"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textStyle="bold"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:id="@+id/btn_dmk_cancel"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_dmk_dangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textStyle="bold"
        android:textColor="#3B96F8"
        android:textSize="19dp"
        android:gravity="center"
        />





</LinearLayout>